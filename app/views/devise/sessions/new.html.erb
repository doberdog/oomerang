<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :class => "form-control", :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :class => "form-control", :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :class => "form-control" %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: 'btn btn-default' %></div>
<% end %>

<%= render "devise/shared/links" %>
